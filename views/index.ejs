<%- include("partials/header.ejs") %>
<form action="/search" method="post">
  <div class="row">
    <div>
      <label for="lat">緯度 (lat)</label>
      <input id="lat" name="lat" type="number" step="0.000001" value="<%= lat %>" required />
    </div>
    <div>
      <label for="lon">經度 (lon)</label>
      <input id="lon" name="lon" type="number" step="0.000001" value="<%= lon %>" required />
    </div>
    <div>
      <label for="radius">半徑（Radius）</label>
      <input id="radius" name="radius" type="number" step="1" value="<%= radius %>" required>
    </div>
    <div>
      <label for="unit">單位</label>
      <select id="unit" name="unit" required>
        <option value="M" <%= unit === "M" ? "selected" : "" %>>公尺 (Meter)</option>
        <option value="K" <%= unit === "K" ? "selected" : "" %>>公里 (Kilometer)</option>
      </select>
    </div>
  </div>
  <button type="submit" style="margin-top:12px;">查詢植物生長狀態</button>
  <% if (error) { %><div class="error"><%= error %></div><% } %>
</form>
<%- include("partials/footer.ejs") %>